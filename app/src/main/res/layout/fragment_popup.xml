<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    app:layout_constraintWidth_min="wrap">

    <View
        android:id="@+id/view5"
        style="@style/ContainerGeneric2"
        android:layout_height="450dp"
        android:minWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popup_button_revenue"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/blue"
        android:inputType="textCapSentences"
        android:text="Receita"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/popup_button_expense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_popup_operation"
        app:strokeColor="@color/background"
        app:strokeWidth="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/popup_button_cancel"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/blue"
        android:inputType="textCapSentences"
        android:text="Cancelar"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/popup_button_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edittext_date"
        app:strokeColor="@color/background"
        app:strokeWidth="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/popup_button_ok"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/background"
        android:inputType="textCapSentences"
        android:text="OK"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popup_button_cancel"
        app:layout_constraintTop_toBottomOf="@+id/popup_edittext_date"
        app:strokeColor="@color/background"
        app:strokeWidth="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/popup_button_expense"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/blue"
        android:inputType="textCapSentences"
        android:text="Despesa"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popup_button_revenue"
        app:layout_constraintTop_toBottomOf="@+id/fragment_popup_operation"
        app:strokeColor="@color/background"
        app:strokeWidth="6dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/fragment_popup_operation"
        style="@style/ContainerGeneric1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="Sample Operação"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/ContainerGeneric1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:paddingTop="3dp"
        android:text="Valor Monetário"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_button_revenue" />

    <TextView
        android:id="@+id/textView2"
        style="@style/ContainerGeneric1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:paddingTop="3dp"
        android:text="Data"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edittext_value" />

    <EditText
        android:id="@+id/popup_edittext_value"
        style="@style/ContainerGeneric2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/popup_edittext_date"
        style="@style/ContainerGeneric2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>